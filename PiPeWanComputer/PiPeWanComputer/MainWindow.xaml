<Window x:Class="PiPeWanComputer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiPeWanComputer"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
        xmlns:views="clr-namespace:PiPeWanComputer.Views" 
        xmlns:viewmodels="clr-namespace:PiPeWanComputer.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Closing="Window_Closing">

    <Grid>
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" Text="{Binding}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Height" Value="30"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Main">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid DataContext="{Binding TempGraphViewModel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Wpf:CartesianChart>
                            <Wpf:CartesianChart.Series>
                                <Wpf:LineSeries Values="{Binding TempGraph}"/>
                            </Wpf:CartesianChart.Series>
                            <Wpf:CartesianChart.AxisX>
                                <Wpf:Axis Title="Time (seconds)" MinValue="0" MaxValue="10"/>
                            </Wpf:CartesianChart.AxisX>
                            <Wpf:CartesianChart.AxisY>
                                <Wpf:Axis Title="Temperature (F)" MinValue="{Binding MinTemperature}" MaxValue="{Binding MaxTemperature}"/>
                            </Wpf:CartesianChart.AxisY>
                        </Wpf:CartesianChart>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="Zoom Out"/>
                            <Label Content="{Binding CurrentTemp}" VerticalAlignment="Center" FontSize="30"/>
                            <Button Content="Zoom In"/>
                        </StackPanel>
                        
                    </Grid>

                    <Grid Grid.Row="1" DataContext="{Binding FlowGraphViewModel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Wpf:CartesianChart Width="700">
                            <Wpf:CartesianChart.Series>
                                <Wpf:LineSeries Values="{Binding FlowGraph}"/>
                            </Wpf:CartesianChart.Series>
                            <Wpf:CartesianChart.AxisX>
                                <Wpf:Axis Title="Time (seconds)" MinValue="0" MaxValue="10"/>
                            </Wpf:CartesianChart.AxisX>
                            <Wpf:CartesianChart.AxisY>
                                <Wpf:Axis Title="Flow (ml/s)" MinValue="{Binding MinFlow}" MaxValue="{Binding MaxFlow}"/>
                            </Wpf:CartesianChart.AxisY>
                        </Wpf:CartesianChart>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="Zoom Out"/>
                            <Label  Content="{Binding CurrentFlow}" VerticalAlignment="Center" FontSize="30"/>
                            <Button Content="Zoom In"/>
                        </StackPanel>
                        
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Mainteance">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Viewbox>
                        <Grid>
                            <Button Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Height="112" Width="245" Margin="10" Command="{Binding Connect}"/>
                        </Grid>
                    </Viewbox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
