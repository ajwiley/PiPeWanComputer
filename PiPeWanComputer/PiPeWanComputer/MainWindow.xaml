<Window x:Class="PiPeWanComputer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiPeWanComputer"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="450" MinWidth="800">

    <Grid>
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" Text="{Binding}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Height" Value="30"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Main">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".8*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                        <Grid>
                            <Label Content="Current Temp (F):" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Top" Width="102"/>
                            <TextBox HorizontalAlignment="Left" Margin="113,0,0,0" TextWrapping="Wrap" Text="{Binding Temp}" VerticalAlignment="Center" Height="26" Width="104" IsReadOnly="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Viewbox>

                    <Viewbox Grid.Column="0" Grid.Row="2" Grid.RowSpan="2">
                        <Grid>
                            <Label Content="Flow Rate (L/H):" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="98"/>
                            <TextBox HorizontalAlignment="Left" Margin="113,0,0,0" TextWrapping="Wrap" Text="{Binding Flow}" VerticalAlignment="Center" Height="26" Width="104" IsReadOnly="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Viewbox>

                    <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2">
                        <Wpf:CartesianChart Name="chtTemp" Margin="10">
                            <Wpf:CartesianChart.Series>
                                <Wpf:LineSeries Values="{Binding TempGraph}"/>
                            </Wpf:CartesianChart.Series>
                            <Wpf:CartesianChart.AxisX>
                                <Wpf:Axis Title="Time (seconds)" MinValue="0"/>
                            </Wpf:CartesianChart.AxisX>
                            <Wpf:CartesianChart.AxisY>
                                <Wpf:Axis Title="Temperature (F)" MinValue="-30" MaxValue="150"/>
                            </Wpf:CartesianChart.AxisY>
                        </Wpf:CartesianChart>
                    </Grid>

                    <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2">
                        <Wpf:CartesianChart x:Name="chtFlow" Margin="10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="2">
                            <Wpf:CartesianChart.Series>
                                <Wpf:LineSeries Values="{Binding FlowGraph}"/>
                            </Wpf:CartesianChart.Series>
                            <Wpf:CartesianChart.AxisX>
                                <Wpf:Axis Title="Time (seconds)" MinValue="0"/>
                            </Wpf:CartesianChart.AxisX>
                            <Wpf:CartesianChart.AxisY>
                                <Wpf:Axis Title="Flow (L/min)" MinValue="0" MaxValue="60"/>
                            </Wpf:CartesianChart.AxisY>
                        </Wpf:CartesianChart>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Mainteance">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Viewbox>
                        <Grid>
                            <Button Content="Reconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Height="112" Width="245" Margin="10" Click="btnReconnect"/>
                        </Grid>
                    </Viewbox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
