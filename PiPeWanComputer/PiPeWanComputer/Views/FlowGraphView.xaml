<UserControl x:Class="PiPeWanComputer.Views.FlowGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiPeWanComputer.Views" xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             d:DataContext="{d:DesignInstance Type=local:FlowGraphView}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Wpf:CartesianChart x:Name="chtFlow" Margin="10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="2">
            <Wpf:CartesianChart.Series>
                <Wpf:LineSeries Values="{Binding FlowGraph}"/>
            </Wpf:CartesianChart.Series>
            <Wpf:CartesianChart.AxisX>
                <Wpf:Axis Title="Time (seconds)" MinValue="0"/>
            </Wpf:CartesianChart.AxisX>
            <Wpf:CartesianChart.AxisY>
                <Wpf:Axis Title="Flow (Ml/min)" MinValue="0" MaxValue="1600"/>
            </Wpf:CartesianChart.AxisY>
        </Wpf:CartesianChart>
    </Grid>
</UserControl>
