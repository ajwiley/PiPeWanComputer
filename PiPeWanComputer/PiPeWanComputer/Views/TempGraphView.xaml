<UserControl x:Class="PiPeWanComputer.Views.TempGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiPeWanComputer.Views" 
             xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:viewmodels="clr-namespace:PiPeWanComputer.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TempGraphViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Wpf:CartesianChart Name="chtTemp" Margin="10">
            <Wpf:CartesianChart.Series>
                <Wpf:LineSeries Values="{Binding TempGraph}"/>
            </Wpf:CartesianChart.Series>
            <Wpf:CartesianChart.AxisX>
                <Wpf:Axis Title="Time (seconds)" MinValue="0"/>
            </Wpf:CartesianChart.AxisX>
            <Wpf:CartesianChart.AxisY>
                <Wpf:Axis Title="Temperature (F)" MinValue="-30" MaxValue="150"/>
            </Wpf:CartesianChart.AxisY>
        </Wpf:CartesianChart>
    </Grid>
</UserControl>
